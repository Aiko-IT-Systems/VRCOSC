          <Generator>MSBuild:Compile</Generator>
          <XamlRuntime>Wpf</XamlRuntime>
          <SubType>Designer</SubType>
        </Page>
    </ItemGroup>

    <ItemGroup>
      <Page Remove="Themes\Dark.xaml" />
      <Resource Include="Themes\Dark.xaml" />
    </ItemGroup>


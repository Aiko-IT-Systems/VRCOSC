<Page x:Class="VRCOSC.Pages.Packages.PackagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VRCOSC.Pages.Packages"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="DataGridHeaderStyle" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="Background" Value="{StaticResource CBackground1}"/>
            <Setter Property="Foreground" Value="{StaticResource CForeground2}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style x:Key="DataGridHeaderStyleCenterAligned" BasedOn="{StaticResource DataGridHeaderStyle}" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="DataGridRoundedCorners" BasedOn="{StaticResource {x:Type DataGrid}}" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGrid}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <DataGridColumnHeadersPresenter Grid.Row="0" Visibility="Visible"/>
                            <ScrollViewer Grid.Row="1" Focusable="false" CanContentScroll="True" VerticalScrollBarVisibility="Disabled" >
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                            <Border Grid.Row="2" Background="{StaticResource CBackground1}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridCellStyle" BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridCellStyleCenterAligned" BasedOn="{StaticResource DataGridCellStyle}" TargetType="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
    </Page.Resources>
    <Border Padding="10" Background="{StaticResource CBackground2}">
        <DataGrid Name="PackageGrid" ItemsSource="{Binding Packages}" AutoGenerateColumns="False" RowHeaderWidth="0" CanUserAddRows="False" CanUserDeleteRows="False" AlternationCount="2" CanUserResizeColumns="False" CanUserReorderColumns="False" Style="{StaticResource DataGridRoundedCorners}" HeadersVisibility="Column" MinColumnWidth="150" GridLinesVisibility="None" d:DataContext="{d:PackageViewModel}" Tag="{Binding ID}">
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="DataGridRow">
                    <Setter Property="IsHitTestVisible" Value="False"></Setter>
                    <Setter Property="Background" Value="{StaticResource CBackground3}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="{StaticResource CBackground4}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Name" HeaderStyle="{StaticResource DataGridHeaderStyle}" MinWidth="200" CellStyle="{StaticResource DataGridCellStyle}"/>
                <DataGridTextColumn Binding="{Binding LatestVersion}" Header="Latest" HeaderStyle="{StaticResource DataGridHeaderStyleCenterAligned}" CellStyle="{StaticResource DataGridCellStyleCenterAligned}"/>
                <DataGridTextColumn Binding="{Binding InstalledVersion}" Header="Installed" HeaderStyle="{StaticResource DataGridHeaderStyleCenterAligned}" CellStyle="{StaticResource DataGridCellStyleCenterAligned}"/>
                <DataGridTextColumn Binding="{Binding PackageType}" Header="Type" HeaderStyle="{StaticResource DataGridHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}"/>
                <DataGridTemplateColumn Header="Action" HeaderStyle="{StaticResource DataGridHeaderStyleCenterAligned}" CellStyle="{StaticResource DataGridCellStyleCenterAligned}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="Green" CornerRadius="5" BorderThickness="0">
                                <Button BorderThickness="0" Background="Transparent" IsEnabled="True" Command="{Binding InstallButtonCommand}" CommandParameter="{Binding Tag}" d:DataContext="{d:PackageViewModel}" Padding="7" MaxWidth="150" MaxHeight="30">
                                    <fa5:ImageAwesome Icon="Solid_Plus" Foreground="White" />
                                </Button>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</Page>

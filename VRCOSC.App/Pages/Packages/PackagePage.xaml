<Page x:Class="VRCOSC.App.Pages.Packages.PackagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      xmlns:ui="clr-namespace:VRCOSC.App.UI"
      xmlns:packages="clr-namespace:VRCOSC.App.Pages.Packages"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:utils="clr-namespace:VRCOSC.App.Utils"
      mc:Ignorable="d">
    <Page.Resources>
        <packages:BackgroundConverter x:Key="BackgroundConverter" />
    </Page.Resources>
    <Grid>
        <Border Name="PageContent" Padding="10" Background="{StaticResource CBackground2}">
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="36" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ui:SpacedStackPanel Grid.Row="0" Spacing="7" Orientation="Horizontal">
                    <Border Background="{StaticResource CBackground3}" Width="570" CornerRadius="5">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <fa5:FontAwesome Grid.Row="0" Grid.Column="0" Icon="Solid_Search" FontSize="22"
                                             Foreground="{StaticResource CForeground3}" VerticalAlignment="Center" />
                            <TextBox x:Name="SearchTextBox" Grid.Row="0" Grid.Column="1"
                                     Style="{StaticResource VRCOSCTextBoxStyle}" FontSize="20"
                                     Foreground="{StaticResource CForeground3}" VerticalContentAlignment="Center"
                                     Background="Transparent" CaretBrush="{StaticResource CForeground3}"
                                     BorderBrush="Transparent" SelectionBrush="{StaticResource CForeground2}" />
                        </Grid>
                    </Border>
                    <ui:VRCOSCButton Width="200" ButtonColour="Blue" Command="{Binding Path=UIRefreshButton}">
                        <TextBlock Text="Refresh" FontSize="20" Foreground="{StaticResource CForeground1}" />
                    </ui:VRCOSCButton>
                    <ui:VRCOSCButton Width="200" ButtonColour="Blue" Command="{Binding Path=UIUpdateAllButton}"
                                     Visibility="{Binding UpdateAllButtonVisibility, Mode=OneWay}">
                        <TextBlock Text="Update All" FontSize="20" Foreground="{StaticResource CForeground1}" />
                    </ui:VRCOSCButton>
                </ui:SpacedStackPanel>
                <Border Name="GridContainer" Background="Transparent" HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CBackground1}" CornerRadius="5 5 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="330" />
                                    <ColumnDefinition Width="240" />
                                    <ColumnDefinition Width="240" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                                           Foreground="{StaticResource CForeground2}" FontSize="20" FontWeight="Bold"
                                           Text="Name" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="{StaticResource CForeground2}" FontSize="20" FontWeight="Bold"
                                           Text="Latest" />
                                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="{StaticResource CForeground2}" FontSize="20" FontWeight="Bold"
                                           Text="Installed" />
                                <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left"
                                           Foreground="{StaticResource CForeground2}" FontSize="20" FontWeight="Bold"
                                           Text="Type" />
                                <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="{StaticResource CForeground2}" FontSize="20" FontWeight="Bold"
                                           Text="Action" />
                            </Grid>
                        </Border>
                        <ui:MouseScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Auto"
                                              Height="{Binding PackageScrollViewerHeight, Mode=OneWay}">
                            <ListView Name="PackageList"
                                      Background="Transparent"
                                      BorderThickness="0" AlternationCount="2" Padding="-1">
                                <b:Interaction.Behaviors>
                                    <ui:IgnoreMouseWheelBehavior />
                                </b:Interaction.Behaviors>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Border Height="50"
                                                            Background="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource BackgroundConverter}}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="15" />
                                                                <ColumnDefinition Width="330" />
                                                                <ColumnDefinition Width="240" />
                                                                <ColumnDefinition Width="240" />
                                                                <ColumnDefinition Width="140" />
                                                                <ColumnDefinition Width="140" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="7" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                                       HorizontalAlignment="Left"
                                                                       Foreground="{StaticResource CForeground1}"
                                                                       FontSize="20"
                                                                       Text="{Binding DisplayName, Mode=OneTime}" />
                                                            <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{Binding UILatestVersionColour, Mode=OneTime}"
                                                                       FontSize="20"
                                                                       Text="{Binding UILatestVersion, Mode=OneTime}" />
                                                            <TextBlock Grid.Column="3" VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource CForeground1}"
                                                                       FontSize="20"
                                                                       Text="{Binding InstalledVersion, Mode=OneTime}" />
                                                            <TextBlock Grid.Column="4" VerticalAlignment="Center"
                                                                       HorizontalAlignment="Left"
                                                                       Foreground="{StaticResource CForeground1}"
                                                                       FontSize="20"
                                                                       Text="{Binding PackageType, Mode=OneTime}" />
                                                            <ui:SpacedStackPanel Grid.Column="5"
                                                                Orientation="Horizontal" VerticalAlignment="Center"
                                                                HorizontalAlignment="Center">
                                                                <ui:VRCOSCButton ButtonColour="Blue"
                                                                    Command="{Binding UIInstallButton}"
                                                                    Visibility="{Binding UIUpgradeVisible}" Width="36"
                                                                    Height="36">
                                                                    <fa5:FontAwesome Icon="Solid_Redo"
                                                                        Foreground="{StaticResource CForeground1}"
                                                                        FontSize="25" />
                                                                </ui:VRCOSCButton>
                                                                <ui:VRCOSCButton ButtonColour="Green"
                                                                    Command="{Binding UIInstallButton}"
                                                                    Visibility="{Binding UIInstallVisible}" Width="36"
                                                                    Height="36">
                                                                    <fa5:FontAwesome Icon="Solid_Plus"
                                                                        Foreground="{StaticResource CForeground1}"
                                                                        FontSize="25" />
                                                                </ui:VRCOSCButton>
                                                                <ui:VRCOSCButton ButtonColour="Red"
                                                                    Command="{Binding UIUnInstallButton}"
                                                                    Visibility="{Binding UIUnInstallVisible}"
                                                                    Width="36" Height="36">
                                                                    <fa5:FontAwesome Icon="Solid_Minus"
                                                                        Foreground="{StaticResource CForeground1}"
                                                                        FontSize="25" />
                                                                </ui:VRCOSCButton>
                                                            </ui:SpacedStackPanel>
                                                            <ui:SpacedStackPanel Grid.Column="6"
                                                                Orientation="Horizontal" FlowDirection="RightToLeft"
                                                                HorizontalAlignment="Right">
                                                                <ui:VRCOSCButton ButtonColour="Blue"
                                                                    Click="InfoButton_ButtonClick"
                                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=DataContext}"
                                                                    Width="36" Height="36">
                                                                    <fa5:FontAwesome Icon="Solid_Info"
                                                                        Foreground="{StaticResource CForeground1}"
                                                                        FontSize="25" />
                                                                </ui:VRCOSCButton>
                                                            </ui:SpacedStackPanel>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </ui:MouseScrollViewer>
                        <Border Grid.Row="2" Background="{StaticResource CBackground1}" CornerRadius="0 0 5 5" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Grid Name="InfoOverlay" Visibility="Collapsed" Opacity="0">
            <Rectangle ClipToBounds="True">
                <b:Interaction.Behaviors>
                    <utils:BlurBackgroundBehavior BlurContainer="{Binding ElementName=PageContent}" BlurRadius="10" />
                </b:Interaction.Behaviors>
            </Rectangle>
            <Border Width="650" Height="500" Background="{StaticResource CBackground3}"
                    HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10" BorderThickness="3"
                    BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150" />
                        <RowDefinition Height="3" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <Border x:Name="InfoImageContainer" Grid.Row="0" CornerRadius="10 10 0 0">
                        <Border.Background>
                            <ImageBrush x:Name="InfoImage" Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>
                    <Border Grid.Row="1" Background="Black" Margin="-1 0"/>
                    <Grid Grid.Row="2">
                        <ui:VRCOSCButton ButtonColour="Red" Width="36" Height="36" Margin="5"
                                         Click="InfoOverlayExit_ButtonClick" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <fa5:ImageAwesome Icon="Solid_ChevronCircleLeft"
                                              Foreground="{StaticResource CForeground1}"
                                              Margin="6" />
                        </ui:VRCOSCButton>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <TextBlock Text="{Binding DisplayName}" Foreground="{StaticResource CForeground1}" TextAlignment="Center" TextWrapping="Wrap"
                                       FontSize="35" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Author}" Foreground="{StaticResource CForeground2}" TextAlignment="Center" TextWrapping="Wrap"
                                       FontSize="14" HorizontalAlignment="Center" Margin="0 -5"/>
                            <TextBlock Text="{Binding Description}" Foreground="{StaticResource CForeground1}"
                                       FontSize="20" HorizontalAlignment="Center" Margin="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <Border Grid.Row="3" Background="{StaticResource CBackground1}" Padding="10" Margin="-1">
                        <ui:SpacedStackPanel Orientation="Horizontal" HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch">
                            <ui:VRCOSCButton ButtonColour="Gray" Width="60" Height="60" CornerRadius="10"
                                             Click="PackageGithub_ButtonClick"
                                             Tag="{Binding RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=2}, Path=DataContext}">
                                <fa5:ImageAwesome Icon="Brands_Github"
                                                  Foreground="{StaticResource CForeground1}"
                                                  Margin="5" />
                            </ui:VRCOSCButton>
                        </ui:SpacedStackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
